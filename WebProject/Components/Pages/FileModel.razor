@using WebProject.Utilities

<div class="file-panel" @onclick="OnPanelClick">
    <div>
        <strong>Идентификатор:</strong> @Group.Id
    </div>
    <div>
        <strong>Дата публикации:</strong> @TimeZoneInfo.ConvertTimeBySystemTimeZoneId(Group.DateUpload, TimeZoneInfo.Local.Id, "Russian Standard Time").ToString();
    </div>
</div>

@code {
    [Parameter]
    public required FilesGroupDTO Group { get; set; }

    [Parameter]
    public EventCallback<FilesGroupDTO> onGroupClicked { get; set; }

    private async Task OnPanelClick()
    {
        await onGroupClicked.InvokeAsync(Group);
    }
}
